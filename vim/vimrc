"--tab close
fun! TMCloseBuffer()
	let l:len = len(getbufinfo({'buflisted':1}))
	if &ft == 'help'
		"--if only window, close
		if winnr() == winnr('$')
			bdelete
			if l:len < 1
				Explore
			endif
		else
			close
		endif
	else
		let l:tabs = tabpagenr('$')
		if l:len > 0 || l:tabs > 1 || &ft !=# 'netrw'
			bdelete
		endif
		if l:len <= 1 && &ft !=# 'netrw'
			Explore
		endif
	endif
endfun
noremap <leader>x :call TMCloseBuffer()<cr>
"-! confirm() when one?
"--yank all
noremap <leader>y :%y+<cr>
"--reload vimrc
nmap <leader>< :so ~/.vimrc<cr>:echo 'reloaded vimrc'<cr>
