#!/bin/bash -i
shopt -s expand_aliases
#--view: view argument(s) in `less`. If passed a command, will run that command and pipe to `less`.  Otherwise, pass as arguments to `less`.
if [ -p /dev/stdin ]; then
	less $@
elif [ ! -e $1 ] && ([ -x "$(command -v ${1})" ] || type $1 >/dev/null 2>&1); then
	eval "$@" | less -R
elif [ -d $1 ]; then
	ls -Flh --color $@ | less -R
else
	less $@
fi
