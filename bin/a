#!/bin/bash -i
shopt -s expand_aliases
if [ $# -lt 1 ]; then
	echo 'Usage: a "command" paths' >&2
	exit 1
fi
cmd="$1"
shift
if [ $# -gt 0 ]; then
	files=("$@")
else
	files=(*)
fi
for file in "${files[@]}"; do
	if [ -d "$file" ]; then
		echo '-------' "$file"
		cd "$file"
		eval "$cmd"
		cd - > /dev/null 2>&1
	fi
done
