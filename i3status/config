general {
	colors = false
	interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
	format_up = "W: (%quality at %essid) %ip"
	format_down = ""
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = ""
}

battery all {
	format = "%status: %percentage"
	format_down = ""
	status_bat = "ðŸ”‹"
	status_chr = "âš¡"
	status_full = "âš¡"
	status_unk = "?"
}

load {
	format = "L: %1min"
}

memory {
	format = "M: %available free"
	format_degraded = "M: < %available"
	threshold_degraded = "200M"
}

tztime local {
	format = "%m-%d %H:%M  "
}
